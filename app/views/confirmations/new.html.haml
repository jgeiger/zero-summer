- title t('.title')
= page_title(t('.title'))
.user-form
  - semantic_form_for resource_name, :url => confirmation_path(resource_name) do |f|
    = f.error_messages
    - f.inputs do
      = f.input :email
    - f.buttons do
      = f.commit_button t('link.resend-confirmation')

    - if devise_mapping.recoverable?
      = link_to(t('link.forgot-password'), new_password_path(resource_name))
      %br
    = link_to(t('link.sign-in'), new_session_path(resource_name))
