- title t('.title')
= page_title(t('.title'))
.user-form
  - semantic_form_for resource_name, :url => password_path(resource_name) do |f|
    = f.error_messages
    - f.inputs do
      = f.input :email
    - f.buttons do
      = f.commit_button t('link.send-password-reset')

    - if devise_mapping.confirmable?
      = link_to(t('link.need-instructions'), new_confirmation_path(resource_name))
      %br

    = link_to(t('link.sign-in'), new_session_path(resource_name))
