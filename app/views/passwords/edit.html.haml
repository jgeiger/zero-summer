- title t('.title')
= page_title(t('.title'))
.user-form
  - semantic_form_for resource_name, :url => password_path(resource_name), :html => { :method => :put } do |f|
    = f.error_messages
    - f.inputs do
      = f.input :reset_password_token, :as => :hidden
      = f.input :password
      = f.input :password_confirmation
    - f.buttons do
      = f.commit_button t('link.change-password')

    - if devise_mapping.confirmable?
      = link_to(t('link.need-instructions'), new_confirmation_path(resource_name))
      %br

    = link_to(t('link.sign-up'), new_user_path)
