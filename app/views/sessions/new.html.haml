- title t('.title')
= page_title(t('.title'))
.user-form
  - semantic_form_for resource_name, :url => session_path(resource_name) do |f|
    = f.error_messages
    - f.inputs do
      = f.input :email
      = f.input :password
      = f.input :remember_me, :as => :hidden, :value => 1
    - f.buttons do
      = f.commit_button t('link.sign-in')
    - if devise_mapping.recoverable?
      = link_to(t('link.forgot-password'), new_password_path(resource_name))
      %br

    - if devise_mapping.confirmable?
      = link_to(t('link.need-instructions'), new_confirmation_path(resource_name))
      %br

    = link_to(t('link.sign-up'), new_user_path)
